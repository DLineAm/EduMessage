<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="EduMessage.Resources.MainDictionary">
    <SolidColorBrush x:Key="ReceivedMessageBackground" Color="Crimson"></SolidColorBrush>
    <SolidColorBrush x:Key="SentMessageBackground" Color="BlueViolet"></SolidColorBrush>
    <SolidColorBrush x:Key="DisabledAccentColor" Color="{ThemeResource AccentTextFillColorDisabledBrush}"></SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryAccentColor" Color="{ThemeResource AccentTextFillColorPrimaryBrush}"></SolidColorBrush>
    <Style TargetType="Button">
        <Setter Property="Padding" Value="10,3"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="26TitleTextBlock">
        <Setter Property="FontSize" Value="26"></Setter>
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
    </Style>
    <Style TargetType="Border" x:Key="CardBorder">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}"/>
    </Style>

    <!--Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"-->
</ResourceDictionary>
